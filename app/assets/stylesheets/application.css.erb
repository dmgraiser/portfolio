body{
	background: url(<%= asset_path "chairs.jpg" %>) no-repeat center center fixed;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  padding-top: 70px;
}

.navbar .nav > li > a, .navbar-brand, .dropdown-menu> li> a {
  text-decoration: none;
}

a, a:hover, a:visited{
	color: white;
	text-decoration: underline;
}

.site-pic {
 	width: 750px;
}

